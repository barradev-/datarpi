#!/usr/bin/rc
#
# Usage: aqm-collect
#

targets=(
	http://telex.barradev.com.ar/aqm
)^'/reg_sesion/create'

umask 0220

logdir=/var/log/aqm
mkdir -p $logdir

AQM_TTY=($AQM_TTY /dev/ttyAMA0)

exec >> $logdir/collector.log >[2=1] < $AQM_TTY(1)
stty 115200 raw crln -echo

tee -a $logdir/device.log |
./aqm-replay 0 0 $targets
